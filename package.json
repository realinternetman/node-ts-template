{
  "name": "node-ts-template",
  "version": "1.0.0",
  "description": "TypeScript Template",
  "main": "dist/index.js",
  "repository": "https://github.com/realinternetman/glocalnet-api",
  "author": "@realinternetman",
  "license": "MIT",
  "private": true,
  "scripts": {
    "develop": "ts-node -r tsconfig-paths/register src/index.ts",
    "watch": "ts-node-dev -r tsconfig-paths/register --respawn src/index.ts",
    "lint": "yarn eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "yarn eslint --fix . --ext .js,.jsx,.ts,.tsx",
    "build": "rimraf dist && webpack"
  },
  "dependencies": {
    "@types/node": "^13.5.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.1",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.5",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  }
}
